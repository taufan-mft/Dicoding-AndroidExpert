<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidExpert" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomActionBar</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AndroidExpert">
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/Theme.AppLib.ActionBar.TitleTextStyle</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="Theme.AppLib.ActionBar.TitleTextStyle" parent="">
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/raleway_bold</item>
    </style>

    <style name="Theme.AndroidExpert.NoActionBar" parent="Theme.AndroidExpert">
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
</resources>